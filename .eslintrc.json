{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["babel", "flowtype", "import", "react"],
  "extends": ["plugin:flowtype/recommended", "plugin:import/errors"],
  "settings": {
    "flowtype": {
      "onlyFilesWithAnnotation": true
    },
    "import/resolver": {
      "babel-module": {}
    }
  }
}
