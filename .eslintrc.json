{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithAnnotation": true
    }
  },
  "extends": ["eslint/recommended", "plugin:flowtype/recommended"],
  "plugins": ["babel", "flowtype", "react"]
}
