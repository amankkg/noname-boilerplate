{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "jest/globals": true
  },
  "extends": ["airbnb", "plugin:flowtype/recommended", "plugin:jest/recommended"],
  "plugins": ["babel", "flowtype", "compat", "jest"],
  "settings": {
    "flowtype": {
      "onlyFilesWithAnnotation": true
    },
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "compat/compat": "error",
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "linebreak-style": "off",
    "semi": ["error", "never"]
  }
}
